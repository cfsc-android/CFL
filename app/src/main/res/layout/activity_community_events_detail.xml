<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".ui.activity.CommunityEventsDetailActivity">

    <include layout="@layout/toolbar_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/events_detail_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                android:text="活动名称"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/events_detail_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="开始时间：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="结束时间：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="活动地点：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_humans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="参加人数：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="活动费用：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_contactor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="    联系人：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="联系电话：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <TextView
                        android:id="@+id/events_detail_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_40"
                        android:text="报名截止：   ---"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/thin_black"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@color/thin_grey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dp_40"
                            android:text="活动详情:   "
                            android:textSize="@dimen/sp_18"
                            android:textColor="@color/thin_black"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_5"/>

                        <TextView
                            android:id="@+id/events_detail_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="@dimen/dp_140"
                            android:text="---"
                            android:textSize="@dimen/sp_18"
                            android:textColor="@color/thin_black"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:scrollbars="vertical"/>


                    </LinearLayout>



                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/events_detail_goto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/btn_green_shape"
                android:text="报名参加"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>