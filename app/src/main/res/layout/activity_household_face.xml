<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backgroud"
    android:orientation="vertical"
    tools:context=".ui.activity.HouseholdFaceActivity">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/household_face_iv_pic"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:src="@drawable/moren_tx_hui"/>
        <TextView
            android:id="@+id/household_face_tv_text"
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="人脸照片尚未上传"/>
    </LinearLayout>
    <Button
        android:id="@+id/household_face_btn_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/btn_green_shape"
        android:text="拍照并上传我的人脸"
        android:textColor="@color/white"/>
</LinearLayout>