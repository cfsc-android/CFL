<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/main_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_45"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/main_tabs_iv_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/icon_tab_home_focus"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_45"
            android:background="@null"
            android:clickable="false"
            />
        <ImageView
            android:id="@+id/main_tabs_iv_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/icon_tab_mine_blur"
            />


    </LinearLayout>


    <ImageView
        android:id="@+id/main_tabs_iv_key"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_tab_home_key"/>



    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/main_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableScrollContentWhenLoaded="true"
        app:srlEnableFooterFollowWhenLoadFinished="true"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>