<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background"
    android:orientation="vertical"
    tools:context=".ui.fragment.minefragment.CurrentRoomFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_warn_shape"
        android:layout_margin="20dp"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/current_room_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/current_room_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/current_room_project_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_line"/>
        <LinearLayout
            android:id="@+id/current_room_project_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋编码 :"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/current_room_room_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/current_room_ll_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/current_room_avatar"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@drawable/icon_user_default"/>
            <TextView
                android:id="@+id/current_room_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="GGG"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="添加一个房屋为业主，开启更多功能"
                android:textColor="@color/text_desc"
                android:textSize="@dimen/sp_14"/>
            <Button
                android:id="@+id/current_room_btn_add"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:text="添加房屋"
                android:textSize="16sp"
                android:textColor="@color/current_room"
                android:background="@drawable/btn_warn_border_shape"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_room_ll_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/current_room_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/current_room_user_avatar"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:src="@drawable/icon_user_default"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/current_room_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>
                    <TextView
                        android:id="@+id/current_room_user_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/sp_12"
                android:background="@color/body_background"
                android:textColor="@color/text_desc"
                android:text="房间其他住户"
                android:textSize="@dimen/sp_14"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/current_room_rv_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>