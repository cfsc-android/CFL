<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_gray_corner"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_2"
    android:id="@+id/item_events_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@null"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_events_iv_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:src="@drawable/car_manage_test"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/item_events_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="时代城-时代天地营销"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/item_events_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址：长房时代城"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"/>

        <TextView
            android:id="@+id/item_events_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报名截止：2020-08-08 12:00:00"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@null">
            <TextView
                android:id="@+id/item_events_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="--人参与"
                android:textColor="@color/text_gray"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:id="@+id/item_events_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_stroke_blue"
                android:text="去参加"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                />

        </RelativeLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>